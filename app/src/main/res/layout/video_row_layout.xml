<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/d300dp"
    android:layout_height="@dimen/d200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/d8dp"
    android:elevation="@dimen/d8dp"
    android:layout_margin="@dimen/d8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_media"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:id="@+id/img_fav"
            android:layout_width="@dimen/d24dp"
            android:layout_height="@dimen/d24dp"
            android:background="@drawable/fav_circle_background"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/d8dp"/>

        <ImageButton
            android:id="@+id/img_play"
            android:layout_width="@dimen/d100dp"
            android:layout_height="@dimen/d100dp"
            android:src="@drawable/ic_video"
            android:background="@null"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/d8dp"/>

        <TextView
            android:id="@+id/tv_media_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/s16sp"
            android:textColor="@android:color/white"
            android:padding="@dimen/d8dp"
            android:textStyle="bold"
            android:background="@drawable/premium_background"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>