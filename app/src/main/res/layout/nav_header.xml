<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d150dp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginStart="@dimen/d16dp"
        android:layout_marginEnd="@dimen/d16dp"
        android:layout_marginBottom="@dimen/d8dp"
        android:textSize="@dimen/s16sp"
        android:layout_above="@id/tv_user_email"/>

    <TextView
        android:id="@+id/tv_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginStart="@dimen/d16dp"
        android:layout_marginEnd="@dimen/d16dp"
        android:layout_marginBottom="@dimen/d16dp"
        android:textSize="@dimen/s16sp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>