<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/d200dp"
    android:layout_height="@dimen/d300dp"
    android:layout_margin="@dimen/d8dp"
    android:elevation="@dimen/d8dp"
    app:cardCornerRadius="@dimen/d8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_media"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/d100dp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="@dimen/d8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_color">

                <TextView
                    android:id="@+id/tv_media_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbarSize="@dimen/s16sp"
                    android:textColor="@android:color/white"
                    android:padding="@dimen/d8dp"
                    android:gravity="center"
                    android:maxLines="2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/read_now"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/d16dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/img_fav"
                    android:layout_width="@dimen/d24dp"
                    android:layout_height="@dimen/d24dp"
                    android:background="@drawable/fav_circle_background"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/d8dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/img_premium"
            android:layout_width="@dimen/d24dp"
            android:layout_height="@dimen/d24dp"
            android:background="@drawable/premium_background"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>